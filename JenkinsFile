pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/AdamBch/selenium-test-szkolenie.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'C:\\Users\\abanach\\AppData\\Local\\Programs\\Python\\Python312\\Scripts\\pip install -r requirements.txt'            }
        }
        stage('Run Tests') {
            try {
                bat 'C:\\Users\\abanach\\AppData\\Local\\Programs\\Python\\Python312\\Scripts\\pytest --html=report.html --alluredir=./allure-results'
            } catch (Exception e) {
                echo 'Tests failed, but continuing to generate report.'
            }
        }
    } finally {
        stage('Generate Allure Report') {
                allure includeProperties:
                    false,
                    jdk: '',
                    properties: [],
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: './allure-results']]
        }
    }

    post {
        always {
            publishHTML([allowMissing: false,
                         alwaysLinkToLastBuild: true,
                         keepAll: true,
                         reportDir: '.',
                         reportFiles: 'report.html',
                         reportName: 'HTML Report',
                         reportTitles: 'Test Report'])
        }
    }
}
